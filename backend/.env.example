# Server
PORT=8080
ENV=development

# Database (PostgreSQL)
# For local development with Docker Compose:
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_voice_agent

# For cloud/production (Supabase, AWS RDS, etc):
# DATABASE_URL=postgresql://username:password@host:5432/database

# Voice Services
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here
CARTESIA_API_KEY=your_cartesia_api_key_here
CARTESIA_VOICE_ID=your_cartesia_voice_id_here

# LLM - Using OpenAI instead of Anthropic
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=

# Auth
JWT_SECRET=your_jwt_secret_here

# LangChain (set to false to use direct OpenAI API)
USE_LANGCHAIN=false
LANGCHAIN_SERVICE_URL=http://localhost:8081
